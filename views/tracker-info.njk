{% extends "layout.njk" %}

{% block body %}
<a href="/">Home</a>
<h1>{{ title }}</h1>

<br />

<h3>Top 10 posters</h3>

<table>
{% for user in top_posters %}
  <tr>
    <td>{{ user.count }}</td><td><a href="https://twitter.com/{{ user.screen_name }}" target="_blank">{{ user.screen_name }}</a></td>
  </tr>
{% endfor %}
</table>
  
<br />

<h3>Top 10 hashtags</h3>
  
<table>
{% for hashtag in top_hashtags %}
  <tr>
    <td>{{ hashtag.count }}</td><td><a href="https://twitter.com/search?q=%23{{ hashtag.text }}" target="_blank">{{ hashtag.text }}</a></td>
  </tr>
{% endfor %}
</table>

<br />

<h3>Top 10 retweeted or mentioned users</h3>
  
<table>
{% for user in top_rm %}
  <tr>
    <td>{{ user.count }}</td><td><a href="https://twitter.com/{{ user.screen_name }}" target="_blank">{{ user.screen_name }}</a></td>
  </tr>
{% endfor %}
</table>


<br />

<h3>Top 10 organisations (linked to in users' descriptions)</h3>
  
<table>
{% for org in top_orgs %}
  <tr>
    <td>{{ org.count }}</td><td><a href="https://twitter.com/{{ org.screen_name }}" target="_blank">{{ org.screen_name }}</a></td>
  </tr>
{% endfor %}
</table>

<br />

<p><a href="/tracker/{{ tracker.id }}/connections">List connections between twitter users</a></p>
<p><a href="/tracker/{{ tracker.id }}/connections.json?orgs=true">Export connections (json)</a></p>

{% endblock %}
